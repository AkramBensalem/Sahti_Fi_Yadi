<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/pharmacy_cordinator_background"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginTop="8dp"
android:layout_marginRight="8dp"
android:layout_marginLeft="8dp"
android:layout_marginBottom="4dp"
app:cardCornerRadius="20dp"
app:cardElevation="4dp"
    >

<LinearLayout
    android:id="@+id/doctor_linear_backgroun"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/pharmacy_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        app:civ_border_color="#6399d5"
        app:civ_border_width="3dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#3f51b5"
        app:civ_shadow_radius="2dp"
        android:transitionName="DOCTORIMAGE"
        tools:src="@drawable/profile" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pharmacy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Akram Pharmacy"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:transitionName="NAME"/>

        <TextView
            android:id="@+id/pharmacy_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="12sp"
            tools:text="Médéa, Médéa" />

            <TextView
                android:id="@+id/pharmacy_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:text="0772375348"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:transitionName="PHONE"
                />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_outline_info_24"
        android:scaleType="centerCrop"
        android:layout_marginRight="8dp"
        app:tint="@color/common_google_signin_btn_text_light" />
</LinearLayout>
</androidx.cardview.widget.CardView>