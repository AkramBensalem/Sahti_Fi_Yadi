<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/doctor_cordinator_background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    >

    <LinearLayout
        android:id="@+id/doctor_linear_backgroun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/donateur_imageinit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            app:civ_border_color="@color/red"
            app:civ_border_width="3dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#FF0000"
            app:civ_shadow_radius="2dp"
            tools:src="@drawable/medicament" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/donateur_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Akram Bensalem"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:transitionName="DOCTORNAME"/>

            <TextView
                android:id="@+id/donateur_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:text="Médéa, Médéa" />
                <TextView
                    android:id="@+id/donateur_grsanguin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:text="B+"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    />
            <TextView
                android:id="@+id/agedonateur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:text="19 ans" />


        </LinearLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/donnateur_phone"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_local_phone_24"
        android:tint="#DD2525"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/donnateur_message"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_message_24"
        android:tint="#DD2525"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donnateur_phone"
        app:layout_constraintVertical_bias="0.833" />
</androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>



