<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#6395CD"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo_two" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/cornershaped"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Inscription"
            android:textColor="@color/colorAccent"
            android:textSize="50dp"
            android:fontFamily="sans-serif-black" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_round_account_circle_24"
           android:drawableTint="@color/colorAccent"
            android:drawablePadding="8dp"
            android:hint="Nom Complet"
            android:drawableLeft="@drawable/ic_round_account_circle_24" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/AddressEmail_deux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_round_mail_24"
            android:drawableLeft="@drawable/ic_round_mail_24"
            android:drawableTint="@color/colorAccent"
            android:drawablePadding="10dp"
            android:hint="Addresse E-mail"
            android:inputType="textEmailAddress"
            />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_round_phone_in_talk_24"
            android:drawableLeft="@drawable/ic_round_phone_in_talk_24"
           android:drawableTint="@color/colorAccent"
            android:drawablePadding="8dp"
            android:hint="Numéro de téléphone"
            android:inputType="phone"
            />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:passwordToggleEnabled="true"
            >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/write_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_round_lock_24"
            android:drawableLeft="@drawable/ic_round_lock_24"
            android:drawableTint="@color/colorAccent"
            android:hint="Mot de Passe"
            android:drawablePadding="8dp"
            android:inputType="textPassword"
            android:textColorHint="@color/colorAccent"
            />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:passwordToggleEnabled="true"
            >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/confrim_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_round_lock_24"
            android:drawableLeft="@drawable/ic_round_lock_24"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorAccent"
            android:hint="Confirmer Mot de Passe"
            android:inputType="textPassword"
            />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/sinscrire_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_corner_two"
            android:onClick="login"
            android:padding="10dp"
            android:text="S'inscrire"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vous avez déja un compte"
                android:textColor="@color/colorAccent"
               android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/signin_sinscrire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Se connecter"
                android:layout_gravity="right"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:fontFamily="sans-serif-black" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
</ScrollView>
