<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:background="?android:selectableItemBackground">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/message_chat_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        app:civ_border_color="#6399d5"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="1dp"
        app:civ_shadow_color="#3f51b5"
        tools:src="@drawable/profile"
        android:layout_gravity="bottom"/>
    <LinearLayout
        android:id="@+id/chat_room_item_petit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_text_corners_blue">

        <TextView
            android:id="@+id/name_message_chat_sender"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
android:visibility="visible"
            android:padding="4dp"
            android:text="Akram Bensalem"
            />

        <TextView
            android:id="@+id/message_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:visibility="visible"
            tools:text="message"
            android:textColor="?android:textColorSecondary" />
        <ImageView
            android:id="@+id/message_chat_image_sender"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            tools:src="@drawable/profile"
            android:visibility="gone"
            android:scaleType="centerCrop"
            />
    </LinearLayout>
</LinearLayout>
    <TextView
        android:id="@+id/message_chat_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        tools:text="Depuit une minute"
        android:textColor="?android:textColorSecondary" />
    </LinearLayout>
