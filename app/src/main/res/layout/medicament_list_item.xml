<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/doctor_cordinator_background"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginTop="8dp"
android:layout_marginRight="8dp"
android:layout_marginLeft="8dp"
android:layout_marginBottom="4dp"
app:cardCornerRadius="20dp"
app:cardElevation="4dp"
    >

<LinearLayout
    android:id="@+id/doctor_linear_backgroun"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/medicament_image"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:transitionName="DOCTORIMAGE"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:civ_border_color="#926FFF82"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#00E44C"
        app:civ_shadow_radius="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/medicament_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Akram Bensalem"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:transitionName="DOCTORNAME"/>

        <TextView
            android:id="@+id/medicament_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="12sp"
            tools:text="Médéa, Médéa" />
            <TextView
                android:id="@+id/medicament_prix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:text="Pédiatre"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:transitionName="SPECIALITE"
                />
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>